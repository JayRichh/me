
{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "../../dist/server",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts"
    ]
}