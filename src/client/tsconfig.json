
{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": false,        
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}